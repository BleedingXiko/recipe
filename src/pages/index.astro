---
import { getCollection } from "astro:content";
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
const allPosts = await getCollection('recipes')
---

<Layout title="Welcome to Astro.">
	  <main>
        <section class="start">
            <h1>Welcome to My Kitchen</h1>
            <p>Discover a world of culinary delights with our recipe website.</p>
        </section>

        <section>
            <h2>Explore Diverse Cuisines</h2>
            <p>From Italian pasta to Japanese sushi, my site features a wide range of international recipes to satisfy your taste buds.</p>
        </section>

        <section class="end">
            <h2>Cook Like a Pro</h2>
            <p>Step-by-step instructions, ingredient lists, and cooking tips make it easy for you to create restaurant-quality dishes at home.</p>
        </section>
    </main>
</Layout>

<style>
	p{
		text-align: center;
	}
	section{
		margin: 20px;
	}
    .start{
        margin-top: 0;
    }

    .end{
        margin-bottom: 40px;
    }
</style>
